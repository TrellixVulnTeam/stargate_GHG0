}

QGroupBox:focus, QTextEdit::focus
{
    border: 2px solid {{ highlight_border }};
}

QWidget:item:hover,
QWidget:item:selected
{
    background-color:{{ highlight }};
    color: {{ text_color_alt }};
}

QPushButton:disabled,
QComboBox:disabled,
QLineEdit:disabled
{
    background-color: {{ background_color_disabled }};
    color: {{ text_color_disabled }};
}

QLineEdit
{
    background-color: {{ text_background_color }};
    color: {{ text_color }};
}

QLineEdit,
QLineEdit:disabled
{
    border: 1px solid {{ border_color }};
    padding: 1px;
}

QPushButton
{
    background-color: {{ background_color_alt }};
    border: 1px solid {{ border_color }};
    color: {{ text_color }};
    padding-left: 3px;
    padding-right: 3px;
    padding: 3px;
}

QPushButton:pressed
{
    background-color: {{ button_pressed }};
}

QPushButton#nested_combobox::menu-indicator
{
    image: url({{ ASSETS_DIR }}/{{ assets_subdir }}/drop-down.svg);
    left: -2px;
    subcontrol-origin: padding;
    subcontrol-position: right center;
}

QComboBox
{
    combobox-popup: 0;
}

QComboBox,
QPushButton#nested_combobox
{
    background-color: {{ combobox }};
    border: 1px solid {{ border_color }};
    color: {{ text_color }};
}

QComboBox:hover,
QLineEdit:hover,
QLineEdit#track_panel:hover,
QSpinBox:hover,
QDoubleSpinBox:hover,
QPushButton:hover
{
    border: 2px solid {{ highlight_border }};
}

QComboBox:off
{
    color:{{ text_color }};
}

QComboBox:on
{
    background-color: {{ button_pressed }};
    color: {{ text_color_alt }};
    padding-left: 4px;
    padding-top: 3px;
    selection-background-color: {{ highlight }};
}

QAbstractItemView
{
    background-color: {{ background_color_alt }};
    border: 2px solid {{ border_color }};
    selection-background-color: QLinearGradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 #ffffff, stop: 1 #dddddd
    );
}

QComboBox::drop-down
{
    border-bottom-right-radius: 3px;
    border-left-color: darkgray;
    border-left-style: solid; /* just a single line */
    border-left-width: 0px;
    border-top-right-radius: 3px; /* same radius as the QComboBox */
    color: {{ text_color_alt }};
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
}

QComboBox::down-arrow
{
    image: url({{ ASSETS_DIR }}/{{ assets_subdir }}/drop-down.svg);
}

QScrollBar::handle {
    border: 1px solid {{ border_color }};
}

QScrollBar:horizontal
{
    background: {{ hscrollbar }};
    border: 1px solid {{ border_color }};
    height: 15px;
    margin: 0px 16px 0 16px;
}

QScrollBar::add-line:horizontal,
QScrollBar::handle:horizontal,
QScrollBar::sub-line:horizontal
{
    background: {{ hscrollbar }};
}

QScrollBar::add-line:vertical,
QScrollBar::handle:vertical,
QScrollBar::sub-line:vertical
{
    background: {{ vscrollbar }};
}

QComboBox:enabled,
QPushButton#nested_combobox,
QScrollBar::add-line:horizontal,
QScrollBar::add-line:vertical,
QScrollBar::handle:horizontal,
QScrollBar::handle:vertical,
QScrollBar::sub-line:horizontal,
QScrollBar::sub-line:vertical
{
    min-height: 20px;
}

QPushButton#huge_button {
    font-size: 36px;
    height: 150px;
    width: 150px;
}

QScrollBar::add-line:horizontal
{
    border: 1px solid {{ border_color }};
    subcontrol-origin: margin;
    subcontrol-position: right;
    width: 14px;
}

QScrollBar::sub-line:horizontal
{
    border: 1px solid {{ border_color }};
    subcontrol-origin: margin;
    subcontrol-position: left;
    width: 14px;
}

QScrollBar[hide="true"]::down-arrow:vertical,
QScrollBar[hide="true"]::left-arrow:horizontal,
QScrollBar[hide="true"]::right-arrow:horizontal,
QScrollBar[hide="true"]::up-arrow:vertical
{
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal
{
    background: {{ hscrollbar_groove }};
    border: 1px solid {{ border_color }};
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical
{
    background: {{ vscrollbar_groove }};
    border: 1px solid {{ border_color }};
}

QScrollBar:vertical
{
    background: #666666;
    border: 1px solid {{ border_color }};
    margin: 16px 0 16px 0;
    width: 15px;
}

QScrollBar::handle:vertical
{
    min-height: 20px;
}

QScrollBar::add-line:vertical
{
    border: 1px solid {{ border_color }};
    height: 14px;
    subcontrol-origin: margin;
    subcontrol-position: bottom;
}

QScrollBar::sub-line:vertical
{
    border: 1px solid {{ border_color }};
    height: 14px;
    subcontrol-origin: margin;
    subcontrol-position: top;
}

QHeaderView::section,
QPlainTextEdit,
QTextEdit
{
    background-color: {{ text_background_color }};
}

QCheckBox:disabled
{
    color: {{ text_color_disabled }};
}

QMainWindow::separator
{
    background-color: {{ border_color }};
    border: 1px solid {{ border_color }};
    color: {{ text_color }};
