/*Volume Faders*/

QSlider
{
    background: transparent;
    border: 2px solid transparent;
}

QSlider::groove:horizontal
{
    background: white;
    border-radius: 4px;
    border: 1px solid #bbb;
    height: 4px;
}

QSlider::sub-page:horizontal
{
    background: #000000;
    border-radius: 4px;
    border: 1px solid #777;
    height: 4px;
}

QSlider::add-page:horizontal
{
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #333333, stop: 1 #000000
    );
    border-radius: 4px;
    border: 1px solid #777;
    height: 4px;
}

QSlider::handle:horizontal
{
    border: 2px solid transparent;
    image: url({{ ASSETS_DIR }}/h-fader.svg);
    margin-bottom: -14px;
    margin-top: -14px;
}


QSlider::groove:vertical
{
    background: white;
    border-radius: 4px;
    border: 1px solid #bbb;
    width: 4px;
}

QSlider::sub-page:vertical
{
    background: qlineargradient(
        x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #000000, stop: 1 #333333
    );
    border-radius: 4px;
    border: 1px solid #777;
    width: 4px;
}

QSlider::add-page:vertical
{
    background: #000000;
    border-radius: 4px;
    border: 1px solid #777;
    width: 4px;
}

QSlider::handle:vertical
{
    border: 2px solid transparent;
    image: url({{ ASSETS_DIR }}/v-fader.svg);
    margin-left: -14px;
    margin-right: -14px;
}

/* Pan Slider */
QSlider#pan_slider
{
    background:transparent;
    border: 2px solid transparent;
}

QSlider#pan_slider::groove:horizontal
{
    background: white;
    border-radius: 4px;
    border: 1px solid #bbb;
    height: 10px;
}

QSlider#pan_slider::sub-page:horizontal
{
    background: #222222;
    border-radius: 4px;
    border: 1px solid #777;
    height: 10px;
}

QSlider#pan_slider::add-page:horizontal
{
    background: #222222;
    border-radius: 4px;
    border: 1px solid #777;
    height: 10px;
}

QSlider#pan_slider::handle:horizontal
{
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #cccccc,
        stop: 0.5 #dddddd stop: 1 #cccccc
    );
    border: 2px solid white;
    height: 15px;
    image: none;
    margin-bottom: -3px;
    margin-top: -3px;
    width: 9px;
}


/*Zoom Sliders*/

QSlider#zoom_slider
{
    background:transparent;
    border: 2px solid transparent;
}

QSlider#zoom_slider::groove:horizontal
{
    background: white;
    border-radius: 4px;
    border: 1px solid #bbb;
    height: 10px;
}

QSlider#zoom_slider::sub-page:horizontal
{
    background: {{ hscrollbar_groove }};
    border-radius: 4px;
    border: 1px solid #777;
    height: 10px;
}

QSlider#zoom_slider::add-page:horizontal
{
    background: {{ hscrollbar_groove }};
    border-radius: 4px;
    border: 1px solid #777;
    height: 10px;
}

QSlider#zoom_slider::groove:vertical
{
    background: white;
    border-radius: 4px;
    border: 1px solid #bbb;
    width: 10px;
}

QSlider#zoom_slider::sub-page:vertical
{
    background: {{ vscrollbar_groove }};
    border-radius: 4px;
    border: 1px solid #777;
    width: 10px;
}

QSlider#zoom_slider::add-page:vertical
{
    background: {{ vscrollbar_groove }};
    border: 1px solid #777;
    width: 10px;
    border-radius: 4px;
}

QSlider#zoom_slider::handle:horizontal,
QSlider#zoom_slider::handle:vertical
{
    image: url({{ ASSETS_DIR }}/zoom_slider_handle.svg) 0 0 0 0 stretch stretch;
    height: 18px;
    width: 18px;
}

QToolTip
{
    background-color: {{ background_color }};
    border: 1px solid white;
    color: {{ text_color }};
    padding: 6px;
}

QGroupBox
{
    border: 2px solid {{ border_color }};
    color: {{ text_color }};
    padding-top: 1.2em;
}

QGroupBox#plugin_groupbox
{
    background-color : {{ background_color }};
    border: 2px solid {{ border_color }};
}

QWidget#plugin_widget
{
